<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                    xmlns:controls="clr-namespace:OSDPBench.Windows.Views.Controls"
                    xmlns:markup="clr-namespace:OSDPBench.Windows.Markup"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="DesignTokens.xaml"/>
        <ResourceDictionary Source="ComponentStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Connection Status Style -->
    <Style x:Key="ConnectionStatusText" TargetType="TextBlock" BasedOn="{StaticResource Text.Body}">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Visibility" Value="Collapsed"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=ViewModel.StatusLevel}" Value="Connected">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Page Header Template -->
    <ControlTemplate x:Key="Template.PageHeader" TargetType="ContentControl">
        <StackPanel Margin="{StaticResource Margin.Card}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Page Title -->
                <TextBlock Grid.Column="0"
                           Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Content}"
                           Style="{StaticResource Page.Title}"
                           VerticalAlignment="Center"/>
                
                <!-- Status Container -->
                <Border Grid.Column="1"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource CornerRadius.Small}"
                        Padding="12,6"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right">
                    <WrapPanel Orientation="Horizontal">
                        <!-- Connection Status - Active Mode (Address at BaudRate) -->
                        <TextBlock Style="{StaticResource ConnectionStatusText}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,16,0">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{markup:Localize Status_ConnectionFormat}">
                                    <Binding Path="ViewModel.ConnectedAddress" />
                                    <Binding Path="ViewModel.ConnectedBaudRate" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>

                        <!-- Connection Status - Passive Monitoring (BaudRate only) -->
                        <TextBlock VerticalAlignment="Center"
                                   Margin="0,0,16,0"
                                   FontWeight="Bold"
                                   Text="{Binding Path=ViewModel.ConnectedBaudRate, StringFormat={markup:Localize Status_PassiveMonitoringFormat}}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource Text.Body}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=ViewModel.StatusLevel}" Value="PassiveMonitoring">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Security Status Badges -->
                        <!-- Clear Text (Red) - shown when connected and not using secure channel -->
                        <Border Background="{DynamicResource SemanticErrorBrush}"
                                CornerRadius="4"
                                Padding="8,4"
                                Margin="0,0,16,0"
                                VerticalAlignment="Center">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Path=ViewModel.StatusLevel}" Value="Connected"/>
                                                <Condition Binding="{Binding Path=ViewModel.UsingSecureChannel}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="{markup:Localize Monitor_ClearText}"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="11"/>
                        </Border>

                        <!-- Encrypted - Default Key (Red) - shown when connected with secure channel using default key -->
                        <Border Background="{DynamicResource SemanticErrorBrush}"
                                CornerRadius="4"
                                Padding="8,4"
                                Margin="0,0,16,0"
                                VerticalAlignment="Center">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Path=ViewModel.StatusLevel}" Value="Connected"/>
                                                <Condition Binding="{Binding Path=ViewModel.UsingSecureChannel}" Value="True"/>
                                                <Condition Binding="{Binding Path=ViewModel.UsesDefaultSecurityKey}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="{markup:Localize Monitor_EncryptedDefaultKey}"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="11"/>
                        </Border>

                        <!-- Encrypted (Green) - shown when connected with secure channel using custom key -->
                        <Border Background="{DynamicResource SemanticSuccessBrush}"
                                CornerRadius="4"
                                Padding="8,4"
                                Margin="0,0,16,0"
                                VerticalAlignment="Center">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Path=ViewModel.StatusLevel}" Value="Connected"/>
                                                <Condition Binding="{Binding Path=ViewModel.UsingSecureChannel}" Value="True"/>
                                                <Condition Binding="{Binding Path=ViewModel.UsesDefaultSecurityKey}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="{markup:Localize Monitor_Encrypted}"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="11"/>
                        </Border>

                        <!-- Default Key (Red) - shown when passive monitoring with default key decryption -->
                        <Border Background="{DynamicResource SemanticErrorBrush}"
                                CornerRadius="4"
                                Padding="8,4"
                                Margin="0,0,16,0"
                                VerticalAlignment="Center">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Path=ViewModel.StatusLevel}" Value="PassiveMonitoring"/>
                                                <Condition Binding="{Binding Path=ViewModel.UsingSecureChannel}" Value="True"/>
                                                <Condition Binding="{Binding Path=ViewModel.UsesDefaultSecurityKey}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="{markup:Localize Monitor_DefaultKey}"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="11"/>
                        </Border>

                        <!-- Custom Key (Green) - shown when passive monitoring with custom key decryption -->
                        <Border Background="{DynamicResource SemanticSuccessBrush}"
                                CornerRadius="4"
                                Padding="8,4"
                                Margin="0,0,16,0"
                                VerticalAlignment="Center">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Path=ViewModel.StatusLevel}" Value="PassiveMonitoring"/>
                                                <Condition Binding="{Binding Path=ViewModel.UsingSecureChannel}" Value="True"/>
                                                <Condition Binding="{Binding Path=ViewModel.UsesDefaultSecurityKey}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="{markup:Localize Monitor_CustomKey}"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="11"/>
                        </Border>

                        <!-- TX Activity Indicator -->
                        <StackPanel Style="{StaticResource Activity.Container}">
                            <TextBlock Text="{markup:Localize Activity_Tx}" 
                                       Style="{StaticResource Activity.Label}"
                                       FontWeight="Bold"/>
                            <controls:LedControl LastActivityTime="{Binding Path=ViewModel.LastTxActiveTime}" 
                                                 LedColor="Red" 
                                                 VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- RX Activity Indicator -->
                        <StackPanel Style="{StaticResource Activity.Container}"
                                    Margin="0">
                            <TextBlock Text="{markup:Localize Activity_Rx}" 
                                       Style="{StaticResource Activity.Label}"
                                       FontWeight="Bold"/>
                            <controls:LedControl LastActivityTime="{Binding Path=ViewModel.LastRxActiveTime}" 
                                                 LedColor="Red" 
                                                 VerticalAlignment="Center"/>
                        </StackPanel>
                    </WrapPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ControlTemplate>

    <!-- Form Field Template -->
    <ControlTemplate x:Key="Template.FormField" TargetType="ContentControl">
        <StackPanel Orientation="Vertical" Margin="{StaticResource Margin.Section}">
            <Label Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"
                   Style="{StaticResource Label.Standard}"
                   Target="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Content}"/>
            <ContentPresenter/>
        </StackPanel>
    </ControlTemplate>

    <!-- Status Message Template -->
    <DataTemplate x:Key="Template.StatusMessage">
        <TextBlock Text="{Binding StatusText}"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   Margin="16,0" d:DataContext="{d:DesignInstance }">
            <TextBlock.Style>
                <Style TargetType="TextBlock" BasedOn="{StaticResource Text.Headline}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding StatusLevel}" Value="Connected">
                            <Setter Property="Foreground" Value="{DynamicResource SemanticSuccessBrush}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding StatusLevel}" Value="Error">
                            <Setter Property="Foreground" Value="{DynamicResource SemanticErrorBrush}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding StatusLevel}" Value="Discovering">
                            <Setter Property="Foreground" Value="{DynamicResource SemanticInfoBrush}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding StatusLevel}" Value="Disconnected">
                            <Setter Property="Foreground" Value="{DynamicResource SemanticWarningBrush}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </DataTemplate>

    <!-- Card Section Template -->
    <Style x:Key="Style.CardSection" TargetType="ui:Card" BasedOn="{StaticResource Card.Standard}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ui:Card">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource CornerRadius.Medium}"
                            Padding="{TemplateBinding Padding}"
                            Margin="{TemplateBinding Margin}">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Data Grid Styles -->
    <Style x:Key="DataGrid.Standard" TargetType="DataGrid">
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="Margin" Value="{StaticResource Margin.Card}"/>
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    </Style>

    <Style x:Key="DataGrid.Monitor" TargetType="DataGrid" BasedOn="{StaticResource DataGrid.Standard}">
        <Setter Property="RowDetailsVisibilityMode" Value="Collapsed"/>
    </Style>

    <!-- Progress Bar Template -->
    <Style x:Key="ProgressBar.FileTransfer" TargetType="ProgressBar">
        <Setter Property="Height" Value="{StaticResource Control.Height.Medium}"/>
        <Setter Property="Maximum" Value="100"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
        <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ControlElevationBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Connection Type Section Template -->
    <Style x:Key="Style.ConnectionSection" TargetType="Grid">
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

</ResourceDictionary>