<Page x:Class="OSDPBench.Windows.Views.Pages.InfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:OSDPBench.Windows.Views.Pages"
    xmlns:effects="clr-namespace:ZBitSystems.Wpf.UI.Effects;assembly=ZBitSystems.Wpf.UI"
    xmlns:controls="clr-namespace:ZBitSystems.Wpf.UI.Controls;assembly=ZBitSystems.Wpf.UI"
    xmlns:localization="clr-namespace:ZBitSystems.Wpf.UI.Localization;assembly=ZBitSystems.Wpf.UI"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800"
    d:DataContext="{d:DesignInstance pages:InfoPage,
									 IsDesignTimeCreatable=False}"
    Title="{localization:Localize Page_Info}">

    <Grid Margin="20 30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0"
                    Grid.Row="0">
            <TextBlock Text="{localization:Localize Info_ApplicationName}" Style="{StaticResource Text.Title}" />
            <TextBlock Text="{Binding AppVersion}" Style="{StaticResource Text.Subtitle}" />
            <TextBlock Text="{Binding CopyWriteNotice}" Style="{StaticResource Text.Body}" />

            <!-- Language Selection -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <TextBlock Text="{localization:Localize Language_Selection}"
                           Style="{StaticResource Text.Subtitle}"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <ComboBox x:Name="LanguageComboBox"
                          ItemsSource="{Binding ViewModel.LanguageViewModel.AvailableLanguages}"
                          SelectedItem="{Binding ViewModel.LanguageViewModel.SelectedLanguage, Mode=TwoWay}"
                          DisplayMemberPath="DisplayName"
                          ToolTip="{localization:Localize Language_SelectLanguage}"
                          Width="150"
                          VerticalAlignment="Center" />
            </StackPanel>
        </StackPanel>

        <Image Grid.Column="1"
               Grid.Row="0"
               Source="../../Assets/logo.png">
            <Image.Style>
                <Style TargetType="Image">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsDarkMode}" Value="True">
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <effects:InvertEffect />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>

        <StackPanel Grid.Column="0"
                    Grid.Row="2"
                    Grid.ColumnSpan="2">
            <TextBlock Text="{localization:Localize Info_LicenseInfo}"
                       Style="{StaticResource Text.Headline}"
                       HorizontalAlignment="Center"
                       Margin="0, 30, 0,10"/>
            <controls:LicenseExpander Header="{localization:Localize Info_EPLLicense}"
                ResourceUri="pack://application:,,,/Assets/EPL.txt" />
            <controls:LicenseExpander Header="{localization:Localize Info_ApacheLicense}"
                Margin="0,10,0,0"
                ResourceUri="pack://application:,,,/Assets/Apache.txt" />
            <controls:LicenseExpander Header="{localization:Localize Info_MITLicense}"
                Margin="0,10,0,0"
                ResourceUri="pack://application:,,,/Assets/MIT.txt" />
        </StackPanel>

    </Grid>
</Page>
