<Page x:Class="OSDPBench.Windows.Views.Pages.InfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:pages="clr-namespace:OSDPBench.Windows.Views.Pages"
    xmlns:markup="clr-namespace:OSDPBench.Windows.Markup"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800"
    d:DataContext="{d:DesignInstance pages:InfoPage,
									 IsDesignTimeCreatable=False}"
    Title="{markup:Localize Page_Info}">

    <Grid Margin="20 30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0"
                    Grid.Row="0">
            <TextBlock Text="{markup:Localize Info_ApplicationName}" FontWeight="Bold" />
            <TextBlock Text="{Binding AppVersion}" FontWeight="Bold"  />
            <TextBlock Text="{Binding CopyWriteNotice}" FontWeight="Bold"  />
        </StackPanel>
        
        <Image Grid.Column="1"
               Grid.Row="0" 
               Source="../../Assets/logo.png">
            <Image.Style>
                <Style TargetType="Image">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsDarkMode}" Value="True">
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <pages:InvertEffect />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>

        <StackPanel Grid.Column="0"
                    Grid.Row="2" 
                    Grid.ColumnSpan="2">
            <TextBlock Text="{markup:Localize Info_LicenseInfo}"
                       HorizontalAlignment="Center"
                       Margin="0, 30, 0,10"
                       FontWeight="DemiBold"
                       FontSize="32"/>
            <ui:CardExpander>
                <ui:CardExpander.Header>
                    <ui:TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        FontTypography="Subtitle"
                        Text="{markup:Localize Info_EPLLicense}" 
                        TextWrapping="Wrap"/>
                </ui:CardExpander.Header>
                <ui:CardExpander.Content>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <ui:TextBlock Name="EplLicenseTextBlock" 
                                      FontTypography="Body"
                                      FontFamily="Courier New"/>
                    </ScrollViewer>
                </ui:CardExpander.Content>
            </ui:CardExpander>
            <ui:CardExpander Margin="0, 10, 0, 0">
                    <ui:CardExpander.Header>
                        <ui:TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            FontTypography="Subtitle"
                            Text="{markup:Localize Info_ApacheLicense}" 
                            TextWrapping="Wrap"/>
                    </ui:CardExpander.Header>
                    <ui:CardExpander.Content>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto">
                            <ui:TextBlock Name="ApacheLicenseTextBlock" 
                                          FontTypography="Body"
                                          FontFamily="Courier New"/>
                        </ScrollViewer>
                    </ui:CardExpander.Content>
                </ui:CardExpander>
            <ui:CardExpander Margin="0, 10, 0, 0">
                <ui:CardExpander.Header>
                    <ui:TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        FontTypography="Subtitle"
                        Text="{markup:Localize Info_MITLicense}" 
                        TextWrapping="Wrap"/>
                </ui:CardExpander.Header>
                <ui:CardExpander.Content>
                    <ui:TextBlock Name="MitLicenseTextBlock" 
                                  FontTypography="Body"
                                  FontFamily="Courier New"
                                  TextWrapping="Wrap"/>
                </ui:CardExpander.Content>
            </ui:CardExpander>
        </StackPanel>
        
    </Grid>
</Page>
